<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <title>Editar Personaje</title>
  </head>

  <body>
    <%-include('../pages/bloques/header') %>
    <div class="container">
      <a class="btn btn-dark btn-sm" href="/API/getAddPersonaje">Añadir</a>

      <button
        class="btn btn-danger btn-sm"
        id="btnEliminar"
        data-id="<%= personaje.id %>"
      >
        Eliminar
      </button>

      <form
        action="/API/personaje/edit/<%= personaje.id %>"
        class="my-2"
        method="POST"
      >
        <input
          type="text"
          value="<%= personaje.nombre %>"
          class="form-control my-2"
          name="nombre"
          id="nombreInput"
        />
        <input
          type="text"
          value="<%= personaje.especie %>"
          class="form-control my-2"
          name="especie"
          id="especieInput"
        />

        <input
          type="text"
          value="<%= personaje.afiliacion %>"
          class="form-control my-2"
          name="afiliacion"
          id="afiliacionInput"
        />

        <input
          type="text"
          value="<%= personaje.nacimiento %>"
          class="form-control my-2"
          name="nacimiento"
          id="nacimientoInput"
        />
        <input
          type="text"
          value="<%= personaje.planeta_natal %>"
          class="form-control my-2"
          name="planeta_natal"
          id="planeta_natalInput"
        />
        <button type="submit" class="btn btn-warning btn-sm">Editar</button>
      </form>
    </div>
  </body>
  <%- include('../pages/bloques/footer') %>
</html>

<script>
  const btnEliminar = document.querySelector(".btn-danger");
  btnEliminar.addEventListener("click", async () => {
    try {
      alert("⚠ Este dato se borra definitivamente de su base de dato ⚠");

      const data = await fetch(`/API/personaje/${btnEliminar.dataset.id}`, {
        method: "delete",
      });
      const res = await data.json();
      
      if (!res) {
         console.log('aqui');
      } else {
       window.location.href = "/API/getAllPersonajes";
      }
    } catch (error) {
      console.log(error);
    }
  });
</script>
